# -*- getpot -*- (GetPot mode activation for emacs)
#-------------------------------------------------
#      Data file for a hyperbolic problem
#-------------------------------------------------

    [exporter]
    type       = hdf5
    folder     = ./
    multimesh  = false   # actually we export also the displacement
    start      = 0
    save       = 1
    file_name  = Concentration64
    [../]

    [hyperbolic]

        [./space_discretization]
    	mesh_dir      = ./Mesh/ # the directory where the mesh file is
    	mesh_file     = cartesian_cube8.mesh
    	mesh_type     = .mesh #structured #.mesh
        mesh_faces    = all
	    verbose       = 0                        # verbose during mesh-reading
    	# 0 -> tetra, 1 -> hexa
	    element_shape = 0
    	[../]

        [./time_discretization]
        initialtime   = 0.
        endtime       = 1
        [../]

        [./numerical_flux]

            [./CFL]
            brent_toll    = 1e-8
            brent_maxIter = 500
            relax         = 0.8
            [../]

            fluxtype = Godunov

            [./godunov]
            brent_toll    = 1e-8
            brent_maxIter = 500
            [../]

        [../]

       	[./miscellaneous]
	    verbose       = 2
    	[../]

    [../]
