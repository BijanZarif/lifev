# -*- getpot -*- (GetPot mode activation for emacs)
#-------------------------------------------------
#      Data file for a hyperbolic problem
#-------------------------------------------------

    [exporter]
    type       = hdf5
    folder     = ./
    multimesh  = false   # actually we export also the displacement
    start      = 0
    save       = 1
    [../]

    [hyperbolic]

        [./space_discretization]
    	mesh_dir      = ./Mesh/ # the directory where the mesh file is
    	mesh_file     = cartesian_cube8.mesh #twoTetrahedra.mesh #aTetrahedra.mesh #cartesian_cube1.mesh
    	mesh_type     = .mesh #structured #.mesh
        mesh_faces    = all
	    verbose       = 0                        # verbose during mesh-reading
    	# 0 -> tetra, 1 -> hexa
	    element_shape = 0
    	[../]

        [./time_discretization]
        initialtime   = 0.
        endtime       = 0.3
        timestep      = 0.01
        [../]

        [./CFL]
        brent_toll    = 1e-4
        brent_maxIter = 50
        relax         = 0.95
        [../]

        [./numerical_flux]
        fluxtype = Godunov

            [./godunov]
            brent_toll    = 1e-4
            brent_maxIter = 50
            [../]

        [../]

       	[./miscellaneous]
	    verbose       = 2
    	[../]

    [../]
