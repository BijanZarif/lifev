AT_SETUP([test_hyperbolic])    #Name of the test
AT_KEYWORDS([hyperbolic])
AT_DATA([data],
[[
    [exporter]
    type       = hdf5
    folder     = ./
    multimesh  = false   # actually we export also the displacement
    start      = 0
    save       = 1
    file_name  = Concentration
    [../]

    [hyperbolic]

        [./space_discretization]
    	mesh_dir      = ./ # the directory where the mesh file is
    	mesh_file     = cartesian_cube8.mesh
    	mesh_type     = .mesh #structured #.mesh
        mesh_faces    = all
	    verbose       = 0                        # verbose during mesh-reading
    	# 0 -> tetra, 1 -> hexa
	    element_shape = 0
    	[../]

        [./time_discretization]
        initialtime   = 0.
        endtime       = 0.1
        [../]

        [./numerical_flux]

            [./CFL]
            brent_toll    = 1e-4
            brent_maxIter = 500
            relax         = 0.8
            [../]

            fluxtype = Godunov

            [./godunov]
            brent_toll    = 1e-4
            brent_maxIter = 500
            [../]

        [../]

       	[./miscellaneous]
	    verbose       = 2
    	[../]

    [../]

]])
AT_CHECK([ln -sf ../../data/mesh/inria/cartesian_cube8.mesh;
          mpirun -np 1 ../../test_hyperbolic/test_hyperbolic -c],[0],[ignore],[ignore])
AT_CLEANUP
