AT_SETUP([test_FEFunction])
AT_KEYWORDS([test_FEFunction FEFunction])
AT_DATA([data],[[

[exporter]
type        = hdf5
folder      = ./
multimesh   = false   # actually we export also the displacement
start       = 0
save        = 1
file_name   = FieldFunction
name_field  = Field
name_fct    = Function
[../]

[fefct]

    [./space_discretization]
    mesh_dir      = ./ # the directory where the mesh file is
    mesh_file     = cartesian_cube8.mesh 
    mesh_type     = .mesh #structured #.mesh
    mesh_faces    = all
    verbose       = 0                        # verbose during mesh-reading
    #0 -> tetra, 1 -> hexa
    element_shape = 0

    [../]

[../]

]])
AT_CHECK([ln -sf ../../data/mesh/inria/cartesian_cube8.mesh;
          mpirun -np 2 ../../test_FEFunction/test_FEFunction -c],[0],[ignore],[ignore])
AT_CLEANUP


