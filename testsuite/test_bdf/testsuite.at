AT_SETUP([test_bdf (order 1)])
AT_KEYWORDS([test_bdf bdf])
AT_DATA([data],[[# -*- getpot -*- (GetPot mode activation for emacs)
#-------------------------------------------------
#      Data file for Mesh test
#-------------------------------------------------

mesh_type  = MESH++
mesh_dir   = ./                 # the directory where the mesh file is
mesh_file  = cube_384.m++       # mesh file
mesh_faces = all                    # update all faces elements

[bdf]
    endtime  = 1
    timestep = 0.5
    order    = 1
]])
AT_CHECK([ln -sf $top_builddir/testsuite/data/mesh/mesh++/cube_384.m++  && $top_builddir/testsuite/test_bdf/test_bdf],[0],[ignore],[ignore])
AT_CLEANUP


